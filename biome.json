{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["**/*.ts"],
		"ignore": ["**/node_modules/*", "**/.vscode/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"indentStyle": "tab",
		"indentWidth": 1
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "master"
	}
}
